<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.AddSongController">
    <HBox prefHeight="100.0" prefWidth="200.0">
        <VBox.margin>
            <Insets/>
        </VBox.margin>
        <Label text="Name" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </HBox.margin>
        </Label>
        <TextField fx:id="songNameTextField" onKeyTyped="#updateChanges" promptText="Song Name" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets bottom="10.0" left="5.0" right="15.0" top="10.0"/>
            </HBox.margin>
        </TextField>
    </HBox>
    <HBox prefHeight="100.0" prefWidth="200.0">
        <Label text="Artist" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </HBox.margin>
        </Label>
        <TextField fx:id="artistTextField" onKeyTyped="#updateChanges" promptText="Artist" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets bottom="10.0" left="5.0" right="15.0" top="10.0"/>
            </HBox.margin>
        </TextField>
    </HBox>
    <HBox prefHeight="100.0" prefWidth="200.0">
        <Label text="Album" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </HBox.margin>
        </Label>
        <TextField fx:id="albumTextField" onKeyTyped="#updateChanges" promptText="Album" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets bottom="10.0" left="5.0" right="15.0" top="10.0"/>
            </HBox.margin>
        </TextField>
    </HBox>
    <HBox prefHeight="100.0" prefWidth="200.0">
        <Label text="Year" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </HBox.margin>
        </Label>
        <TextField fx:id="yearTextField" onKeyTyped="#updateChanges" promptText="Year" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets bottom="10.0" left="5.0" right="15.0" top="10.0"/>
            </HBox.margin>
        </TextField>
    </HBox>
    <HBox prefHeight="100.0" prefWidth="200.0">
        <Label text="Genre" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </HBox.margin>
        </Label>
        <TextField fx:id="genreTextField" onKeyTyped="#updateChanges" promptText="Genre" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets bottom="10.0" left="5.0" right="15.0" top="10.0"/>
            </HBox.margin>
        </TextField>
    </HBox>
    <HBox alignment="CENTER" prefHeight="60.0" prefWidth="400.0">
        <Button alignment="CENTER" cancelButton="true" mnemonicParsing="false" onAction="#close" prefHeight="25.0"
                prefWidth="140.0" style="-fx-background-color: f08078;" text="Cancel">
            <HBox.margin>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </HBox.margin>
        </Button>
        <Button fx:id="uploadButton" alignment="CENTER" disable="true" mnemonicParsing="false" onAction="#onUpload"
                prefHeight="25.0" prefWidth="140.0" style="-fx-background-color: AEFB9F;" text="Upload"
                HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </HBox.margin>
        </Button>
    </HBox>
    <BorderPane prefHeight="200.0" prefWidth="200.0"/>
</VBox>
